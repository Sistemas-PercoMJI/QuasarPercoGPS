rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Usuarios pueden acceder a sus archivos personales
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ðŸ”¥ RUTAS: Lectura pÃºblica, escritura solo autenticados
    match /rutas/{unidadId}/{allPaths=**} {
      allow read: if true;  // âœ… Cualquiera puede leer
      allow write: if request.auth != null;  // âœ… Solo usuarios autenticados escriben
    }
    
    match /coordenadas/{unidadId}/{allPaths=**} {
      allow read: if true;  // âœ… Cualquiera puede leer
      allow write: if request.auth != null;
    }
    
    // Fallback
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}