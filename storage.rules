rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Usuarios pueden acceder a sus archivos personales
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ðŸ”¥ Archivos de rutas diarias (CORREGIDO)
    match /rutas/{unidadId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /coordenadas/{unidadId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback: acceso total para usuarios autenticados
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}