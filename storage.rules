rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Usuarios pueden acceder a sus archivos personales
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ðŸ†• Archivos JSON de rutas diarias por unidad
    match /rutas/{unidadId}/{fecha} {
      allow read, write: if request.auth != null;
    }
    
    // Temporal: permite acceso total para testing (mantener al final como fallback)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}