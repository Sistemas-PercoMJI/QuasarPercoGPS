rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reportes: acceso para autenticados
    match /Reportes/{ReporteId} {
      allow read, write: if request.auth != null;
    }
    match /Reportes {
      allow list: if request.auth != null;
    }
    
    // Conductores: acceso para autenticados
    match /Conductores/{conductorId} {
      allow read, write: if request.auth != null;
    }
    match /Conductores {
      allow list: if request.auth != null;
    }
    
    // ðŸ†• Unidades CON subcolecciones RutaDiaria y EventoDiario
    match /Unidades/{unidadId} {
      allow read, write: if request.auth != null;
      
      // ðŸ†• SUBCOLECCIÃ“N RutaDiaria (dentro de cada Unidad)
      match /RutaDiaria/{rutaId} {
        allow read, write: if request.auth != null;
        
        // ðŸ†• SUBCOLECCIÃ“N EventoDiario (dentro de cada RutaDiaria)
        match /EventoDiario/{eventoId} {
          allow read, write: if request.auth != null;
        }
      }
    }
    match /Unidades {
      allow list: if request.auth != null;
    }
    
    // Usuarios: solo el dueÃ±o puede acceder
    match /Usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // SUBCOLECCIÃ“N POIS
      match /POIS/{poiId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÃ“N GruposConductores
      match /GruposConductores/{grupoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÃ“N Geozonas
      match /Geozonas/{geozonaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÃ“N Eventos
      match /Eventos/{eventoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÃ“N HistorialReportes
      match /HistorialReportes/{reporteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Listar usuarios (si lo necesitas)
    match /Usuarios {
      allow list: if request.auth != null;
    }
     match /SuperAdmins/{adminId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo manual desde consola
    }
  }
}