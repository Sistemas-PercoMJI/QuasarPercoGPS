rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reportes: acceso para autenticados
    match /Reportes/{ReporteId} {
      allow read, write: if request.auth != null;
    }
    match /Reportes {
      allow list: if request.auth != null;
    }
    
    // Conductores: acceso para autenticados
    match /Conductores/{conductorId} {
      allow read, write: if request.auth != null;
    }
    match /Conductores {
      allow list: if request.auth != null;
    }
    
    // Unidades: acceso para autenticados
    match /Unidades/{unidadId} {
      allow read, write: if request.auth != null;
    }
    match /Unidades {
      allow list: if request.auth != null;
    }
    
    // Usuarios: solo el dueño puede acceder
    match /Usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // SUBCOLECCIÓN POIS
      match /POIS/{poiId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÓN GruposConductores
      match /GruposConductores/{grupoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÓN Geozonas
      match /Geozonas/{geozonaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // SUBCOLECCIÓN Eventos
      match /Eventos/{eventoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // ⭐ AGREGAR: SUBCOLECCIÓN HistorialReportes
      match /HistorialReportes/{reporteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Listar usuarios (si lo necesitas)
    match /Usuarios {
      allow list: if request.auth != null;
    }
  }
}