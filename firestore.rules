rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Conductores: acceso para autenticados
    match /Conductores/{conductorId} {
      allow read, write: if request.auth != null;
    }
    match /Conductores {
      allow list: if request.auth != null;
    }
    
    // Usuarios: solo el dueño puede acceder
    match /Usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // ✅ SUBCOLECCIÓN POIS - mismo nivel que GruposConductores
      match /POIS/{poiId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /POIS {
        allow list: if request.auth != null && request.auth.uid == userId;
      }
      
      // Grupos de conductores del usuario
      match /GruposConductores/{grupoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /Usuarios {
      allow list: if request.auth != null;
    }
  }
}