rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ†• FUNCIÃ“N HELPER: Verificar si es Super Admin
    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/SuperAdmin/$(request.auth.uid));
    }
    
    // Reportes: acceso para autenticados
    match /Reportes/{ReporteId} {
      allow read, write: if request.auth != null;
    }
    match /Reportes {
      allow list: if request.auth != null;
    }
    
    // Conductores: acceso para autenticados
    match /Conductores/{conductorId} {
      allow read, write: if request.auth != null;
    }
    match /Conductores {
      allow list: if request.auth != null;
    }
    
    // Unidades CON subcolecciones RutaDiaria y EventoDiario
    match /Unidades/{unidadId} {
      allow read, write: if request.auth != null;
      
      match /RutaDiaria/{rutaId} {
        allow read, write: if request.auth != null;
        
        match /EventoDiario/{eventoId} {
          allow read, write: if request.auth != null;
        }
      }
    }
    match /Unidades {
      allow list: if request.auth != null;
    }
    
    // ðŸ†• USUARIOS: Super Admins pueden ver todo, usuarios normales solo lo suyo
    match /Usuarios/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      
      // SUBCOLECCIÃ“N POIS
      match /POIS/{poiId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      }
      
      // SUBCOLECCIÃ“N GruposConductores
      match /GruposConductores/{grupoId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      }
      
      // SUBCOLECCIÃ“N Geozonas
      match /Geozonas/{geozonaId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      }
      
      // SUBCOLECCIÃ“N Eventos
      match /Eventos/{eventoId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      }
      
      // SUBCOLECCIÃ“N HistorialReportes
      match /HistorialReportes/{reporteId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      }
    }
    
    // ðŸ†• LISTAR USUARIOS: Super Admins pueden listar, usuarios normales pueden listar (para buscar)
    match /Usuarios {
      allow list: if request.auth != null;
    }
    
    // Super Admins (solo lectura para verificaciÃ³n)
    match /SuperAdmin/{adminId} {
      allow read: if true;
      allow write: if false; // Solo manual desde consola
    }
    
  }
}